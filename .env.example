# Google Analytics Measurement ID (format: G-XXXXXXXXXX)
GOOGLE_ANALYTICS_ID=

# Enable/disable Google Analytics tracking (true/false)
# If not set but GOOGLE_ANALYTICS_ID is provided, defaults to true
GOOGLE_ANALYTICS_ENABLED=true

# Enable debug mode for Google Analytics (true/false)
# When enabled, tracks events to console instead of sending to GA
GOOGLE_ANALYTICS_DEBUG=false

# Existing environment variables for your app
NPS_API_KEY=your_nps_api_key_here
SERVER_PORT=8080
ENV=dev
DB_PATH=./data/dashboard.db

# For production (HTTPS)
# CERT_PATH=path/to/cert.pem
# CERT_KEY_PATH=path/to/private-key.pem
